<h4>ADD A COMMENT</h4>

<%= bootstrap_form_for(@comment, inline_errors: false, url: comment_create_path) do |f| %>
  <%= f.alert_message "There was a problem creating your comment:" %>
  <%= f.text_field :content %>
  <%= f.submit "Create Comment", data: {
                  :'sweet-alert-confirm' => "Are you sure you want to create this comment?",
                  :'confirm-button-text' => 'Create',
                  :'cancel-button-text' => 'Cancel',
                  :'confirm-button-color' => '#5CB85C',
                  :'sweet-alert-type' => 'success',
                  text: 'This cannot be edited later.'
                  } %>

<% end %>