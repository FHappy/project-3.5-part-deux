
<div class="container">
  <div class="outer editForm">
    <h3>Edit your post</h3>
    <div class="row">
        <div class="inner editFormBox">
        <div class="">

    <div class="outer editForm">
      <div class="row">
        <div class="inner">
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">

          <%= bootstrap_form_for(@post, inline_errors: false, url: post_update_path(@post), method: :put) do |f| %>
          <%= f.alert_message "There was a problem updating your post:" %>
          <%= f.text_field :title, placeholder: @post.title %>
          <%= f.text_area :content, placeholder: @post.content %>
          <%= f.submit "Update Post", data: {
                  :'sweet-alert-confirm' => "Are you sure you want to edit this post?",
                  :'confirm-button-text' => 'Edit',
                  :'cancel-button-text' => 'Cancel',
                  :'confirm-button-color' => '#428BCA',
                  :'sweet-alert-type' => 'info',
                  text: 'This can be changed later.'
                  } %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
</div>
