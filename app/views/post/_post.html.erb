<div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="feed feed-body">
          <div class="list-group">
                  <li class="list-group-item">
                    <div class="feed feed-picture col-lg-4 col-md-4 col-sm-4 col-xs-4">
                      <%= image_tag(@post.user.img_url, :class=> "profile_img_feed img-rounded img-responsive") %>
                    </div>
                    <div class="feed-body">
                      <%= link_to @user_show_path(@post.user.id) do %>
                          <h3><%= @post.user.username %></h3>
                      <% end %>
                      <%= link_to post_show_path(@post.id) do %>
                          <h4><%= @post.title %></h4>
                      <% end %>
                      <br>
                      <p><%= @post.content %></p>
                      <br>
                      <div class="postFooter">
                        <span class="postCity"><%= @post.city.name %>, <%= @post.city.country %> </span>
                          <br>
                        <span class="postComments">Number of comments: <%= @post.comments.length %>,   <%= @post.time_difference %></span>

                        <% if user_signed_in? %>
                            <% if @post.user_id == current_user.id %>

                                <%= link_to post_edit_path(@post.id) do %>
                                    <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
                                <% end %>

                                <%= link_to ('<i class="fa fa-trash fa-2x" aria-hidden="true"></i>').html_safe, post_delete_path(@post.id),
                                            method: 'delete',
                                            data: {
                                                :'sweet-alert-confirm' => "Are you sure you want to delete #{@post.title}?",
                                                :'confirm-button-text' => 'Delete',
                                                :'cancel-button-text' => 'Cancel',
                                                :'confirm-button-color' => '#D9534F',
                                                :'sweet-alert-type' => 'error',
                                                text: 'This cannot be undone.'
                                            } %>

                            <% end %>
                        <% end %>
                    </div>
                  </li>
          </div>
        </div>
      </div>
    </div>