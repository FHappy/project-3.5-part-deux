<h1>User#index</h1>
<p>Find me in app/views/user/index.html.erb</p>

<%#basic bootstrap table, obviously modify later with styling or trash it%>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>User</th>
              <th>Following</th>
              <th>Followers</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user.username, user_show_path(user) %>
                </td>
                <td>
                  <%= link_to user.following.count, user_following_path(user) %>
                </td>
                <td>
                  <%= link_to user.followers.count, user_followers_path(user) %>
                </td>
                <% if user_signed_in? %>
                  <td>
                    <% if current_user.following?(user) %>
                      <%= form_for(@user.active_bonds.find_by(followed_id: user.id), 
                                   method: 'delete') do |f| %>
                        <%= f.submit "Unfollow", class: "btn btn-danger" %>
                      <% end %>
                    <% else %>
                      <%= form_for(@user.active_bonds.build) do |f| %>
                        <div>
                          <%= hidden_field_tag :followed_id, user.id %>
                        </div>
                        <%= f.submit "Follow", class: "btn btn-primary" %>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

