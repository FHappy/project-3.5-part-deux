<h1>User#show</h1>
<p>Find me in app/views/user/show.html.erb</p>

<div class="flex-container">
  <div class="userInfo">
    <div class="userPicture" ><img src="#{img_url}" alt="User Profile Image"></div>
    <div class="userDetails">
      <ul>
        <li><%= user.first_name %> <%= user.last_name %></li>
        <li><%= user.created_at.to_date%></li>
        <li><%= user.current_city %></li>
      </ul>

    </div>
    <div class="userButtons"> <button type="button" name="Edit Profile"></button></div>
  </div>

  <div class="posts">
    <div class = "individualPost"></div>
  </div>

</div>
