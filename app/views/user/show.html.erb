<h1>User#show</h1>
<p>Find me in app/views/user/show.html.erb</p>

<div class="flex-container">
  <div class="userInfo">
    <div class="userPicture" ><%= image_tag(@user.img_url) %></div>
    <div class="userDetails">
      <ul>
        <li><%= current_user.first_name %><%= current_user.last_name %></li>
        <li><%= current_user.created_at.to_date%></li>
        <li><%= current_user.current_city %></li>
      </ul>

    </div>
    <div class="userButtons"> <button type="button">Edit Profile</button></div>
  </div>

  <div class="posts">
    <div class="userBio"> <%= @user.bio %></div>
      <% @posts.each do |post|  %>
        <div class = "individualPost">
          <%= post.content %>

      <% end %>
  </div>
</div>
